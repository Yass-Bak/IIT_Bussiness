<div class="container py-12 h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="~/img/undraw_Forgot_password_re_hxwm.png"
                             alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">

                            <form id="account" method="post">

                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <div class="navbar-brand">
                                        <img src="~/img/logoISB1-1.png" alt="Login Image" class="me-2" height="60">
                                    </div>
                                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;"><strong>Récupérer compte</strong></h3>
                                </div>



                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="Adresse e-mail" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                             
                                <div class="pt-1 mb-4">
                                    <button id="login-submit" type="submit" class="btn btn-dark btn-lg btn-block" type="button">Réinitialiser le mot de passe</button>
                                </div>
                                
                                    <a class="small text-muted" id="login" asp-page="./Login">
                                   Retour à la connexion
                                </a>
                               
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

